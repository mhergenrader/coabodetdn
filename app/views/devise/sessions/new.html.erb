
<div id="ajax-data">
<h2>Sign In</h2>
<hr/>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name) , :html => { :class => "form-horizontal" }) do |f| %>
  <div class="field control-group" ><%= f.label :email, :class => "control-label" %>
  <%= f.email_field :email, :class=> "controls" %></div>

  <div class="field control-group"><%= f.label :password,  :class => "control-label" %>
  <%= f.password_field :password, :class=> "controls" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="field control-group"><%= f.check_box :remember_me, :class=> "controls" %> <%= f.label :remember_me, :class => "control-label"  %></div>
  <% end -%>

    <div class="form-actions buttons">
		<button class="action green">
		<span class="label upper">Sign in</span>
		</button>
	 </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>