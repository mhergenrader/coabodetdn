<div id="wrapper">
<% if (current_user.role? :admin) or (@user == current_user) %>
	<h1>Set User Role for <%= @user.username %></h1>


	<% if user_signed_in? %>
		<p id="notice"><%= notice %></p>
		
		Hello, <%= @user.email %><br/>
		Your current role is: <%= @user.roles %>



		<table class="table">
		  <tr>
			<th>Name</th>
			<th>Is Role</th>
			<th></th>
			<th></th>
		  </tr>
		  
		<%= form_for :role  do |f| %>
			<% @roles.each do |role| %>
			  <tr>
				<td><%= role.name %></td>
				<td><%= f.radio_button nil, role.id, :name=> 'role', :checked => (@user.role? role.name.to_sym) %></td>
			  </tr>
			<% end %>
			
			</table>
			<div class="form-actions buttons">
				<button class="action green">
				<span class="label upper">Save Changes</span>
				</button>
			</div>
			
		<% end %>

	<% end %>
<% else %>
	<h1>Access Denied</h1>
<% end %>

</div>