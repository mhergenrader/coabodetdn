<h1>Listing Roles</h1>
<hr/>
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= link_to 'Show', role, :class=> "btn" %></td>
    <td><%= link_to 'Edit', edit_role_path(role) , :class=> 'btn' %></td>
    <td><%= link_to 'Destroy', role, confirm: 'Are you sure?', method: :delete, :class=> "btn" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Role', new_role_path, :class=> 'btn' %>
