<script>
$(document).ready(function() {
    $('#users').dataTable({
		"sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
		  "aaSorting": [[ 0, "asc" ]],
		  
        "sScrollX": "100%",
        "bScrollCollapse": true
	});
	
} );
$.extend( $.fn.dataTableExt.oStdClasses, {
    "sWrapper": "dataTables_wrapper form-inline"
} );
	</script>
	

<h2>Listing All Users (Advanced)</h2>


<table id="users" cellpadding="0" width="100%" cellspacing="0" border="0" class="table table-striped table-bordered"" >
    <thead>
        <tr>
			<th>Username</th>
            <th>Email</th>
            <th>First Name</th>
			<th>Middle Name</th>
            <th>Last Name</th>
			<th>Ethnicity</th>
			<th>Date of Birth</th>
			<th>City</th>
			<th>State</th>
			<th>Zip Code</th>
			<th>Sign Up Date</th>
			<th>Last Sign In</th>
			<th>Time Dollars</th>
        </tr>
    </thead>
    <tbody>
		<% @users.each do |user| %>
			<tr>	
				<td><%= user.username %></td>
				<td><%= user.email %></td>
				<td><%= user.first_name %></td>
				<td><%= user.middle_name %></td>
				<td><%= user.last_name %></td>
				<td><%= user.ethnicity %></td>
				<td><%= user.date_of_birth %></td>
				<td><%= user.city %></td>
				<td><%= user.state %></td>
				<td><%= user.zip_code %></td>
				<td><%= user.created_at.to_date.strftime("%m/%d/%Y") %></td>
				<td><%= user.last_sign_in_at.to_date.strftime("%m/%d/%Y") %></td>
				<td><%= user.time_dollars %></td>
								
			</tr>
		<% end %>
    </tbody>
</table>
