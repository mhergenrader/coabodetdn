<script>
$(document).ready(function() {
    $('#users').dataTable({
		"sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
		  "aaSorting": [[ 0, "asc" ]]
	});
	
} );
$.extend( $.fn.dataTableExt.oStdClasses, {
    "sWrapper": "dataTables_wrapper form-inline"
} );
	</script>
	

<h2>Listing All Users</h2>


<table id="users" cellpadding="0" width="100%" cellspacing="0" border="0" class="table table-striped table-bordered"" >
    <thead>
        <tr>
			<th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
			<th>State</th>
			<th>Time Dollars</th>
        </tr>
    </thead>
    <tbody>
		<% @users.each do |user| %>
			<tr>	
				<td>
					<%= user.username %>
				</td>
					<td><%= user.email %></td>
				<td>
					<%= user.first_name %>
				</td>
				<td>
					<%= user.last_name %>
				<td>
					<%= user.state %>				
				</td>
				<td>
					<%= user.time_dollars %>
				</td>
			</tr>
		<% end %>
    </tbody>
</table>
