<h3>Reply to this Message</h3>
<%= form_for @reply, :html => { :class => "form-horizontal" } do |f| %>
  <% if @reply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field control-group">
    <%= f.label :from , :class => "control-label" %>
	<%= f.text_field :from , :class => "controls span6", :disabled => "true" %>
  </div>
  <div class="field control-group">
    <%= f.label :to, :class => "control-label"  %>
	<%= f.text_area :to , :class => "controls span6", :rows => 5, :value=> @reply.to %>

  </div>
  
  <div class="field control-group">
    <%= f.label :title , :class => "control-label" %>
    <%= f.text_field :title , :class => "controls span6" %>
  </div>
  <div class="field control-group">
    <%= f.label :content , :class => "control-label" %>
    <%= f.text_area :content , :class => "controls span6" %>
  </div>
  <div class="form-actions" style="text-align:right;">
    <%= f.submit 'Send', :class => "btn btn-success" %>
  </div>
<% end %>
